# Databricks Spark profile defaults for materializations demo
FF_SPARK_MASTER=local[*]
FF_SPARK_APP_NAME=materializations_demo

# Managed table configuration (Hive-compatible Spark session)
FF_DBR_ENABLE_HIVE=1
FF_DBR_DATABASE=materializations_demo
# Optional: Delta Lake
# FF_DBR_TABLE_FORMAT=delta

# Prefer an existing JAVA_HOME (e.g., in CI); fall back to the macOS brew path for local use.
if [ -z "${JAVA_HOME:-}" ] && [ -d "/opt/homebrew/opt/openjdk@17" ]; then
  JAVA_HOME=/opt/homebrew/opt/openjdk@17
fi
